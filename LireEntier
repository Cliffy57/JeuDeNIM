int lireentier(int borninf,int bornsup ) 
{
int nombre_entre;
while (scanf("%d",&nombre_entre) !=1   (borninf > nombre_entre)  (nombre_entre > bornsup))
{        
printf("Le nombre saisi est invalide !\n");
}      
return nombre_entre; 
}
int lireentier(int borninf,int bornsup )
{
    int nombre_entre;
    while (scanf("%d",&nombre_entre) !=1  || (borninf > nombre_entre) || (nombre_entre > bornsup))
        {
        printf("Le nombre saisi est invalide !\n");

        }

    return nombre_entre;
}

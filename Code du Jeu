#include <stdio.h>

void affichplateau(int Xplateau,int Yplateau,int xpos,int ypos)
{
  int i=1,j=1,k=1;
  printf("   ");
  for(k=1;k!=Xplateau+1;k++)
  {printf(" %d ",k);}
  printf("\n");
  for(j=1;j<Yplateau+1;j++){
    printf(" %d ",j);
    for(i=1;i<Xplateau+1;i++)
      {
        
        if(xpos == i && ypos ==j)
        {
          printf("|X|");
        }
        else
        {
          printf("|-|");
        }
      }
    printf("\n");
    }}

int main()
{
 
  int xpos=1,ypos=1;
  int xplateau=7,yplateau=8;
  int reponse = 0;
  affichplateau(xplateau,yplateau,xpos,ypos);
  while(xpos !=xplateau || ypos!=yplateau)
      {
        if(xpos == xplateau )
        {
          printf("Où veux tu allez?\n1.En bas?\n2.En bas x2?\n");
          scanf("%d",&reponse);
          switch (reponse)
          {
          case 1:
            ypos++;
            break;
          
          case 2:
            ypos = ypos +2;
            break;
          
          default: printf("Mauvaise saisie, recommencez\n");
          }
        }
        else if(ypos == yplateau-1 && xpos == xplateau-1)
        {
          printf("Où veux tu allez?\n1.A droite\n2.En bas?\n");
          scanf("%d",&reponse);
          switch (reponse)
          {
          case 1:
            xpos++;
            break;
          
          case 2:
            ypos++;
            break;

          default: printf("Mauvaise saisie, recommencez\n");
        }}
        
        else if(ypos == yplateau)
        {
          printf("Où veux tu allez?\n1.A droite\n2.A droite x2?\n");
          scanf("%d",&reponse);
          switch (reponse)
          {
          case 1:
            xpos++;
            break;
          
          case 2:
            xpos= xpos +2;
            break;

          default: printf("Mauvaise saisie, recommencez\n");
        }}
        else if(xpos == xplateau-1)
        {
          printf("Où veux tu allez?\n1.A droite\n2.En bas?\n3.En bas x2?\n");
          scanf("%d",&reponse);
          switch (reponse)
          {
          case 1:
            xpos++;
            break;
          
          case 2:
            ypos++;
            break;

          case 3:
            ypos = ypos +2;
            break;

          default: printf("Mauvaise saisie, recommencez\n");
        }}
        
        else if(ypos == yplateau-1)
        {
          printf("Où veux tu allez?\n1.A droite\n2.En bas?\n3.A droite x2?\n");
          scanf("%d",&reponse);
          switch (reponse)
          {
          case 1:
            xpos++;
            break;
          
          case 2:
            ypos++;
            break;

          case 3:
            xpos = xpos +2;
            break;

          default: printf("Mauvaise saisie, recommencez\n");
        }}

        else
        {
          printf("Où veux tu allez?\n1.A droite\n2.En bas?\n3.A droite x2?\n4.En bas x2?\n");
          scanf("%d",&reponse);
          switch (reponse)
          {
          case 1:
            xpos++;
            break;
          
          case 2:
            ypos++;
            break;
          
          case 3:
            xpos= xpos +2;
            break;

          case 4:
            ypos = ypos +2;
            break;

          default: printf("Mauvaise saisie, recommencez\n");
        }}

      affichplateau(xplateau,yplateau,xpos,ypos);
      }
}
